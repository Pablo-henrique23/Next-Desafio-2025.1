generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Categoria {
  PC
  NOTEBOOK
  GPU
  CPU
  COOLER
  SSD
  HDD
  GABINETE
  RAM
  PLACA_MAE
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
}

model Produto {
  id Int @id @default(autoincrement())
  name String @unique
  categoria Categoria[]
  descricao String
  preco Float
  image String
}

